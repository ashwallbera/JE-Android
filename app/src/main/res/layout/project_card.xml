<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/headr_layout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="vertical"
                android:background="@color/solidGreen"
                android:layout_marginTop="0dp"
                >

                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Project Name"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/project_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Location"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    />


            </LinearLayout>

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="161dp"
                android:layout_height="120dp"
                android:layout_below="@+id/headr_layout"
                android:layout_marginTop="0dp"
                android:background="@drawable/ic_signinbox" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@color/solidGreen">

                <TextView
                    android:id="@+id/txt_totalworkers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="Total of Workers"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/total_workers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_totalworkers"
                    android:layout_alignBottom="@+id/txt_totalworkers"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginBottom="-32dp"
                    android:text="10/30"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignLeft="@+id/total_workers"
                    android:layout_alignTop="@+id/txt_totalworkers"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="-44dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="-15dp"
                    android:background="@drawable/icon_unselectedblackuserworker" />


            </RelativeLayout>
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>